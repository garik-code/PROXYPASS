################################################# API PROXY

server {

    listen 80;
    server_name api.cryptosec.space;

		charset UTF-8;

    access_log /var/log/nginx/api.cryptosec.space-access.log;
    error_log /var/log/nginx/api.cryptosec.space-error.log;

    location / {

        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
				proxy_redirect off;

				proxy_pass http://185.220.33.217:3030;

    }

}

#################################################
